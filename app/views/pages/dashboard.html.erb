<%# ================== START OF CALENDER ================== %>
<div class="container">
  <%= month_calendar(events: @events) do |date, events| %>
    <%= date.day %>
    <% events.each do |e| %>
      <div class="event">
        <small><%= e.programme.name %> @ <%= e.programme.university %></small> <br>
        <p><%= e.header %></p>
      </div>
    <% end %>
  <% end %>
</div>
<%# ================== END OF CALENDER ================== %>
