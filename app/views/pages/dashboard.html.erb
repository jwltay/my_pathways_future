<div class="beige-background h-100 footer-padding">
  <div class="container px-5">
    <h1 class="pt-5 pb-3 px-5 ms-4 fade-in-right">Hi <%= @user.first_name.capitalize %>!</h1>
    <div class="d-flex">
      <%# ================== LEFT SECTION STARTS HERE ================== %>
      <div class="col mx-4">
        <div class="h-auto px-5 pb-5 pt-4 mb-4 bg-white rounded shadow border-top border-primary border-5">
          <h2>Your selected pathway</h2>
          <hr class="m-0 my-3">
          <p class="m-0">You have chosen to pursue</p>
          <h3 class="mb-4 fs-5">Software Engineering</h3>
          <p class="m-0">as a career, by following the pathway</p>
          <h3 class="mb-4 fs-5"><%= @programme.name %></h3>
          <p class="m-0 mb-1">offered by</p>
          <%= image_tag("NTU_Logo.png", class: "card-dashboard-pathway-image") %>
        </div>
        <div class="h-auto ps-2 pe-5 pb-4 mb-4 bg-white rounded shadow border-top border-primary border-5">
          <%# Hard coded Programme and countdown! %>
          <%= render partial: "shared/countdown", locals:{ target: @target } %>
          <h6 class="text-end">to application deadline</h6>
        </div>
        <div class="h-auto p-4 mb-4 bg-warning rounded shadow">
          <h2 class="text-white text-center" >Ready to apply?</h2>
          <p class="text-white text-center m-0" >Click here to go to the application page</p>
        </div>
      </div>
      <%# ================== LEFT SECTION ENDS HERE ================== %>
      <%# ================== RIGHT SECTION STARTS HERE ================== %>
      <div class="col mx-4">
        <%# ================== CALENDAR STARTS HERE ================== %>
        <div class="calendar h-auto px-5 py-4 mb-4 bg-white rounded shadow border-top border-primary border-5">
          <h2>Calendar of events</h2>
          <hr class="m-0 my-3">
          <div class="d-flex">
            <div>
              <%= month_calendar(events: @events) do |date, events| %>
                <%= date.day %>
                <% events.each do |e| %>
                  <div class="event">
                  </div>
                <% end %>
              <% end %>
            </div>
            <div class="ps-4 w-100">
              <p class="fw-bold m-0">Events</p>
              <hr class="m-0 my-1 w-50">
              <p class="my-2"><span class="event-color-code-purple"> </span> A-level results</p>
              <p class="my-2"><span class="event-color-code-teal"> </span> Letters of recommendation</p>
              <p class="my-2"><span class="event-color-code-pink"> </span> Application deadline</p>
              <p></p>
              <p></p>
            </div>
          </div>
        </div>
        <%# ================== CALENDAR ENDS HERE ================== %>
        <%# ================== TO-DO LIST STARTS HERE ================== %>
        <div class="h-auto px-5 py-4 mb-4 bg-white rounded shadow border-top border-primary border-5">
          <h2>To-do list</h2>
          <hr class="m-0 my-3">
          <div data-controller="todo-list" data-todo-list-position-value="beforeend">
            <%= render partial: "pages/todo_list", locals: { tasks: @tasks }%>
            <%= render partial: "pages/todo_list_form", locals: { user: @user, task: Task.new }%>
          </div>
        </div>
        <%# ================== TO-DO LIST ENDS HERE ================== %>
      </div>
      <%# ================== RIGHT SECTION ENDS HERE ================== %>
    </div>
  </div>
</div>
