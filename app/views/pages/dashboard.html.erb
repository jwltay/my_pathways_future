<%# ================== START OF CALENDER ================== %>
<div class="container">
  <%= month_calendar(events: @events) do |date, events| %>
    <%= date.day %>
    <% events.each do |e| %>
      <div class="event">
        <small><%= e.programme.name %> @ <%= e.programme.university %></small> <br>
        <p><%= e.header %></p>
      </div>
    <% end %>
  <% end %>
</div>
<%# ================== END OF CALENDER ================== %>
<%# ================== START OF TODO-LIST ================== %>
<div class="container" style="margin-top: 20p; max-width: 250px">
  <% @tasks.each do |task| %>
    <div class="task-item">
      <%= task.title %>
      <%= link_to "Destroy", task_path(task), data: {turbo_method: :delete}, class: "delete-btn btn btn-sm btn-danger" %>
    </div>
  <% end %>
  <%= simple_form_for(@task) do |f| %>
    <%= f.input :title, label: false %>
    <%= f.submit "Add Task", class: "btn btn-info rounded-pill text-danger border-danger col-12" %>
  <% end %>
  <%= simple_form_for(@user) do |f| %>
    <%= f.association :tasks,
            as: :check_boxes %>
  <% end %>
</div>
<% @tasks.each do |option| %>
  <%= check_box_tag "options[]", option, checked: false %>
  <%= label_tag option.title %><br>
<% end %>
