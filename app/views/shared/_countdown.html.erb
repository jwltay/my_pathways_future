<div class="countdown" data-controller="countdown" data-countdown-target="countdown" data-seconds-until-end="<%= target.to_i - DateTime.now.to_i %>">
  <div class="bloc-time days" >
    <span class="count-title">Days</span>

    <div class="figure days days-1">
      <span class="top" data-countdown-target="days1"></span>
      <span class="top-back">
        <span data-countdown-target="days1"></span>
      </span>
      <span class="bottom" data-countdown-target="days1"></span>
      <span class="bottom-back">
        <span data-countdown-target="days1"></span>
      </span>
    </div>

    <div class="figure days days-1">
      <span class="top" data-countdown-target="days2"></span>
      <span class="top-back">
        <span data-countdown-target="days2"></span>
      </span>
      <span class="bottom" data-countdown-target="days2"></span>
      <span class="bottom-back">
        <span data-countdown-target="days2"></span>
      </span>
    </div>
  </div>

  <div class="bloc-time hours">
    <span class="count-title">Hours</span>

    <div class="figure hours hours-1">
      <span class="top" data-countdown-target="hours1"></span>
      <span class="top-back">
        <span data-countdown-target="hours1"></span>
      </span>
      <span class="bottom" data-countdown-target="hours1"></span>
      <span class="bottom-back">
        <span data-countdown-target="hours1"></span>
      </span>
    </div>

    <div class="figure hours hours-2">
      <span class="top" data-countdown-target="hours2"></span>
      <span class="top-back">
        <span data-countdown-target="hours2"></span>
      </span>
      <span class="bottom" data-countdown-target="hours2"></span>
      <span class="bottom-back">
        <span data-countdown-target="hours2"></span>
      </span>
    </div>
  </div>

  <div class="bloc-time minutes">
    <span class="count-title">Minutes</span>

    <div class="figure minutes minutes-1">
      <span class="top" data-countdown-target="minutes1"></span>
      <span class="top-back">
        <span data-countdown-target="minutes1"></span>
      </span>
      <span class="bottom" data-countdown-target="minutes1"></span>
      <span class="bottom-back">
        <span data-countdown-target="minutes1"></span>
      </span>
    </div>

    <div class="figure minutes minutes-2">
      <span class="top" data-countdown-target="minutes2"></span>
      <span class="top-back">
        <span data-countdown-target="minutes2"></span>
      </span>
      <span class="bottom" data-countdown-target="minutes2"></span>
      <span class="bottom-back">
        <span data-countdown-target="minutes2"></span>
      </span>
    </div>
  </div>

  <div class="bloc-time seconds">
    <span class="count-title">Minutes</span>

    <div class="figure seconds seconds-1">
      <span class="top" data-countdown-target="seconds1"></span>
      <span class="top-back">
        <span data-countdown-target="seconds1"></span>
      </span>
      <span class="bottom" data-countdown-target="seconds1"></span>
      <span class="bottom-back">
        <span data-countdown-target="seconds1"></span>
      </span>
    </div>

    <div class="figure seconds seconds-2">
      <span class="top" data-countdown-target="seconds2"></span>
      <span class="top-back">
        <span data-countdown-target="seconds2"></span>
      </span>
      <span class="bottom" data-countdown-target="seconds2"></span>
      <span class="bottom-back">
        <span data-countdown-target="seconds2"></span>
      </span>
    </div>
  </div>
</div>
