<!-- Parent controller -->
<div data-controller="modal">
  <!-- Trigger -->
  <div class="btn btn-primary" data-action="click->modal#showModal">
    More Information
  </div>
  <!-- Modal Wrapper -->
  <div class="modal-wrapper" data-modal-target="popup">
    <!-- Close Btn -->
    <i class="fa fa-times fa-2x" data-action="click->modal#hideModal"></i>
    <!-- Content -->
    <div class="container">
      <div class="modal-content">
        <div class="banner-green">
          <div class="container d-block">
            <h3><%= programme.name %></h3>
            <p>@ <%= programme.university %></p>
          </div>
        </div>

        <div class="container"
          data-controller="read-more"
        >
        <%# ----------------------Start of info-cards ------------------------%>
          <div class="info-cards">
            <div class="bg-info pathway-card text-dark
                        text-center d-flex flex-column justify-content-between">
              <i class="fa-regular fa-calendar-days" style="color: #4398B4;"></i>
              <h4>Programme Duration</h4>
              <p><%= programme.duration %> years</p>
            </div>
            <div class="bg-info pathway-card text-dark
                        text-center d-flex flex-column justify-content-between">
              <i class="fa-solid fa-file-invoice-dollar" style="color: #32A474;"></i>
              <h4>Tuition Fees</h4>
              <p>S$<%= programme.tuition_fees %></p>
            </div>
            <div class="bg-info pathway-card text-dark
                        text-center d-flex flex-column justify-content-between">
              <i class="fa-solid fa-trophy" style="color: #E4BC14;"></i>
              <h4>University Ranking</h4>
              <p>#<%= programme.rating %></p>
            </div>
          </div>
        <%# ----------------------End of info-cards ------------------------%>
          <%# ---------------------Start of Overview --------------------------%>
          <div class="item rounded">
            <h4>Overview</h4>
            <p>
              <%= programme.short_overview %>
              <span id="dots"
                class='active'
                data-read-more-target="triggerMore"
              >
                ...
                <a href=""
                 data-action="click->read-more#readMore"
                >
                  Read More
                </a>
              </span>

              <span id="more"
                data-read-more-target="triggerLess">
                <%= programme.omitted_overview %>
                <span id="read-less">
                  <a href=""
                  data-action="click->read-more#readLess"
                  >
                    Read Less
                  </a>
                </span>
              </span>
            </p>
          </div>
          <%# ---------------------End of Overview --------------------------%>
        </div>
      </div>
    </div>
  </div>
</div>
