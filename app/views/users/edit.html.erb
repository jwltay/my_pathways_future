<div class="beige-background pb-5">
  <h2 class='teal-header bg-primary text-white text-center fw-bold p-3'>Tell us about yourself</h2>
  <div class="container" data-controller="user-form">
    <%= simple_form_for(@user) do |f| %>
      <%#=============== first page ================%>
      <div class="first-page" data-user-form-target="firstform">
        <div class="d-flex text-primary align-items-center justify-content-center my-5">
          <i class="fa-solid fa-circle m-2"></i>
          <div class="line"></div>
          <i class="fa-solid fa-circle m-2"></i>
          <div class="line"></div>
          <i class="fa-solid fa-circle m-2"></i>
        </div>
        <div class="fade-in-bottom">
          <%= f.input :occupation,
              as: :radio_buttons,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'category-wrapper',
              item_wrapper_class: 'category-item',
              input_html: {class: 'category-selector'},
              collection: User::CATEGORIES %>
        </div>
        <div class="d-flex justify-content-center mt-5">
          <div class="btn btn-primary shadow-sm rounded-pill text-white px-4" data-user-form-target="secondbutton">Next</div>
        </div>
      </div>
      <%#================ end of first page ==============%>
      <%#================= second page =====================%>
      <div class="form-container d-none" data-user-form-target="secondform">
        <div class="d-flex text-primary align-items-center justify-content-center my-5">
          <i class="fa-solid fa-circle-check text-warning fs-3"></i>
          <div class="line line-active"></div>
          <i class="fa-solid fa-circle m-2"></i>
          <div class="line"></div>
          <i class="fa-solid fa-circle m-2"></i>
        </div>
        <div class="form-inputs-second">
          <%= f.input :first_name, label: "First name:", input_html: { class: "shadow-sm" }%>
          <%= f.input :last_name, label: "Last name:", input_html: { class: "shadow-sm" } %>
        </div>
        <div class="d-flex justify-content-center mt-5">
          <div class="btn btn-primary shadow-sm rounded-pill text-white px-4" data-user-form-target="thirdbutton">Next</div>
        </div>
      </div>
      <%#=============== end of second paage ====================%>
      <%#=================== third page ========================%>
      <div class="form-container d-none" data-user-form-target="thirdform">
        <div class="d-flex text-primary align-items-center justify-content-center my-5">
          <i class="fa-solid fa-circle-check text-warning fs-3"></i>
          <div class="line line-active"></div>
          <i class="fa-solid fa-circle-check text-warning fs-3"></i>
          <div class="line line-active"></div>
          <i class="fa-solid fa-circle m-2"></i>
        </div>
        <div class="form-inputs-third">
          <%= f.association :subjects,
                    as: :check_boxes,
                    label: "What subjects have you studied?",
                    input_html: { class: "tag-selector" },
                    item_wrapper_class: 'tag-item' %>
          <%= f.association :soft_skills,
                    as: :check_boxes,
                    label: "What soft skills do you possess?",
                    input_html: { class: "tag-selector" },
                    item_wrapper_class: 'tag-item' %>
        </div>
        <div class="d-flex justify-content-center mt-5">
          <%= f.submit "Show my options", class: "btn btn-danger shadow-sm rounded-pill text-white" %>
        </div>
      </div>
      <%#=============== end of third page =================%>
    <% end %>
  </div>
</div>
